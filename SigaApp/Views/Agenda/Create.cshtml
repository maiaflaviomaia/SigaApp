@model SigaApp.Models.Entidades.Agenda

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabelAgenda">Novo Agendamento</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control " />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DataEvento" class="control-label"></label>
                        <input asp-for="DataEvento" type="date" class="form-control " />
                        <span asp-validation-for="DataEvento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Hora" class="control-label"></label>
                        <input asp-for="Hora" class="form-control  time" />
                        <span asp-validation-for="Hora" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ClienteID" class="control-label"></label>
                        <select asp-for="ClienteID" class="form-control " asp-items="@(new SelectList(ViewBag.ListaClientes, "ClienteID", "RazaoSocial"))">
                            <option value="">-- Selecione --</option>
                        </select>
                        <span asp-validation-for="ClienteID" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="EstudioID" class="control-label"></label>
                        <select asp-for="EstudioID" class="form-control " asp-items="@(new SelectList(ViewBag.ListaEstudios, "EstudioID", "Nome"))">
                            <option value="">-- Selecione --</option>
                        </select>
                        <span asp-validation-for="EstudioID" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Observacao" class="control-label"></label>
                        <textarea asp-for="Observacao" class="form-control "></textarea>
                        <span asp-validation-for="Observacao"></span>
                    </div>
                </div>
            </div>
            <div>
                <div class="modal-footer">
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-sm btn-primary btnSalvar" />
                        <a asp-action="Index" value="Fechar" class="btn btn-sm btn-dark">Fechar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

