@model SigaApp.Models.Entidades.Usuario

<h4 style="font-size:2.0rem; font-weight: 300; line-height: 1.2;">Usuário - @User.Identity.Name</h4>
<hr />

<form asp-action="AlterarSenha">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="UsuarioID" />
    <input type="hidden" asp-for="DataCadastro" />
    <input type="hidden" asp-for="FlagAtivo" />
    <input type="hidden" asp-for="EmpresaID" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control " readonly />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control " readonly />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Perfil" class="control-label"></label>
            <input asp-for="Perfil" class="form-control " readonly />
            <span asp-validation-for="Perfil" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" class="form-control " type="password" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
        <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-dark">Voltar</a>
    </div>
</form>
