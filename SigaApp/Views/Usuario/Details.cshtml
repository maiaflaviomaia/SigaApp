@model SigaApp.Models.Entidades.Usuario

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Usuário - @Model.Nome</div>
            <div class="panel-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DataCadastro)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DataCadastro)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Senha)
                        </dt>
                        <dd class="col-sm-10">
                            **********
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Perfil)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Perfil)
                        </dd>
                    </dl>
                </div>

                <div class="form-group">
                    <a asp-action="AlterarSenha" class="btn btn-sm btn-primary" asp-route-id="@Model.UsuarioID">Alterar Senha</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-dark">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>