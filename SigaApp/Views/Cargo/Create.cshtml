@model SigaApp.Models.Entidades.Cargo

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Cadastrar Cargo</div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-5 mb-3">
                            <label asp-for="DescricaoSumaria" class="control-label"></label>
                            <input asp-for="DescricaoSumaria" class="form-control " />
                            <span asp-validation-for="DescricaoSumaria" class="text-danger"></span>
                        </div>

                        <div class="col-md-2 mb-3">
                            <label asp-for="SalarioBase" class="control-label"></label>
                            <input asp-for="SalarioBase" class="form-control  money2" />
                            <span asp-validation-for="SalarioBase" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="DescricaoDetalhada" class="control-label"></label>
                            <textarea asp-for="DescricaoDetalhada" class="form-control "></textarea>
                            <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-dark">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

