@model SigaApp.Models.Entidades.Categoria

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Cadastrar Categoria</div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label asp-for="Tipo" class="control-label">Tipo</label>
                            <select asp-for="Tipo" class="form-control ">
                                <option value="Despesas">Despesas</option>
                                <option value="Receitas">Receitas</option>
                            </select>
                            <span asp-validation-for="Tipo"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label asp-for="CategoriaPai" class="control-label"></label>
                            <select asp-for="CategoriaPai" class="form-control " asp-items="@(new SelectList(ViewBag.ListaCategoriaPai, "CategoriaID", "Nome"))">
                                <option value="">-- Selecione --</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control " />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-dark">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


